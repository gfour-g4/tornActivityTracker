{
  "name": "torn-activity-bot",
  "version": "2.1.0",
  "description": "Discord bot to track Torn faction member activity",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "NODE_ENV=development node --watch src/index.js",
    "deploy": "git push && ssh username@192.168.1.100 \"cd C:\\path\\to\\torn-activity-bot && git pull origin main && npm install --production && pm2 restart torn-activity-bot\"",
    "migrate": "node src/utils/migrate.js",
    "generate-key": "node -e \"console.log(require('./src/utils/crypto').generateKey())\"",
    "encrypt-keys": "node src/utils/encrypt-keys.js"
  },
  "dependencies": {
    "@napi-rs/canvas": "^0.1.88",
    "better-sqlite3": "^9.6.0",
    "discord.js": "^14.14.1",
    "dotenv": "^16.3.1",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
